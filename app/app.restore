#!/bin/bash -ex
# vim: set filetype=sh :

# This script restores the application from a backup archive file

echo Restoring Drupal
sudo -u "${php_user}" /bin/bash -x << END_OF_SUDO
cd "${php_home}"

drush archive-restore \
  --destination=${php_home} \
  --db-url=mysql://${db_user}:${db_pass}@${db_host}/${db_name} \
  --overwrite \
  ${restore}

END_OF_SUDO
