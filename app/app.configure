#!/bin/bash -ex
# vim: set filetype=sh :

# This script configures the container

# wait for mysql
while ! nc -w 1 -z "${db_host}" 3306; do
  sleep 1;
done

# set uid on run-time user and directory
/fix-uids "${php_home}" "${php_user}"
chown "${php_user}:${php_user}" "${php_home}"

# Tell drush where php_home is
mkdir -p ${HOME}/.drush
chmod a+rx ${HOME} ${HOME}/.drush
echo "<?php \$options[\"r\"] = \"${php_home}/drupal\";" > ${HOME}/.drush/drushrc.php ;

